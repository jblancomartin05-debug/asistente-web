import OpenAI from "openai";

const openai = new OpenAI({
  apiKey: process.env.OPENAI_API_KEY // ⚠️ Se pone la API Key en Vercel, no aquí
});

export default async function handler(req, res) {
  if (req.method !== 'POST') {
    return res.status(405).json({ error: 'Método no permitido' });
  }

  const { mensaje } = req.body;

  try {
    const respuesta = await openai.chat.completions.create({
      model: "gpt-4",
      messages: [
        { role: "system", content: "Eres un asistente amigable y profesional para ayudar a los usuarios de esta web." },
        { role: "user", content: mensaje }
      ]
    });

    res.status(200).json({ respuesta: respuesta.choices[0].message.content });
  } catch (error) {
    res.status(500).json({ error: error.message });
  }
}
